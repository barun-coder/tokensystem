<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/shadow">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient android:angle="135" android:endColor="@color/theme_color" android:startColor="@color/theme_light_color" android:type="linear" />


        </shape>

    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient android:angle="135" android:endColor="@color/theme_color" android:startColor="@color/theme_light_color" android:type="linear" />


        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient android:angle="135" android:endColor="@color/theme_light_color" android:startColor="@color/theme_color" android:type="linear" />


        </shape>

    </item>
</selector>


