<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.displayfort.dftoken.ui.feedback.SuggestionItemViewModel" />


    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">


            <TextView
                android:id="@+id/cbdepartment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/checkboxbuttonbackground"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onObjAdd()}"
                android:padding="2dp"
                android:text="{viewModel.name}"
                android:textColor="@drawable/radiobuttontextselector"
                android:textSize="16sp" />


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>